@model IEnumerable<EcommerceProject.Models.Consulta>

@{
    ViewBag.Title = "Consultas a responder";
}
<div class="row" style="margin-top: 20px">
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item"><a href="@Url.Action("UserInfo","Account")">Publicaciones</a></li>
            <li class="list-group-item"><a href="@Url.Action("GetContratacionesRealizadas","Account")">Contrataciones realizadas</a></li>
            <li class="list-group-item"><a href="@Url.Action("GetContratacionesDelUsuario","Account")">Contrataciones a realizar</a></li>
            <li class="list-group-item"><a href="@Url.Action("GetConsultasDelUsuario","Account")">Consultas</a></li>
            <li class="list-group-item"><a href="#">Opiniones</a></li>
            <li class="list-group-item"><a href="@Url.Action("EditUser","Account")">Detalles de cuenta</a></li>
        </ul>
    </div>
    <div class="col-md-10">

        @if (Model.Count() > 0)
        {
            <div class="well">
                <div class="list-group">
                    @foreach (var c in Model)
                    {
                        <div class="card" style="width: 100%">
                            <div class="card-body">
                                <h6>@c.Usuario.Nombre @c.Usuario.Apellido </h6>

                                <h6>@c.Publicacion.Titulo</h6>

                                <p class="card-text">
                                    @c.Descripcion
                                </p>
                                <div style="margin-bottom:20px;">
                                    <textarea class="card-text form-control textoAResponder"></textarea>
                                </div>
                                <div class="float-right">
                                    <input type="hidden" value="@c.Id" class="idABuscar"/>
                                    <button class="btn btn-danger" onclick="borrarConsulta(@c.Id)">Borrar</button>
                                    <button class="btn btn-primary responder_comentario">Responder</button>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                </div>
            </div>
        }
        else
        {
            <div class="well">
                <p>No tiene consultas a responder</p>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        $(".responder_comentario").on("click", function () {

            var id = $(this).parent().find('.idABuscar').val();
            var texto = $(this).parent().parent().find('.textoAResponder').val();
            var data = {
                id: id,
                texto: texto
            };

             $.ajax({
                data: data,
                type: "post",
                url: "@Url.Action("ResponderConsulta","Account")",
                success: function (result) {
                    if (result == "NotAllowed") {
                        alert("Debe estar logueado para comentar")
                    } else if (result == "guardado") {
                        location.reload();
                    }
                },
                error: function (result) {
                    alert("Hubo un error", result);
                }
            })

        })

        function borrarConsulta(id) {
            $.ajax({
                data: {
                    id: id
                },
                type: "post",
                url: "@Url.Action("EliminarConsulta","Account")",
                success: function (result) {
                    if (result == "NotAllowed") {
                        alert("Debe estar logueado para comentar")
                    } else if (result == "eliminada") {
                        location.reload();
                    }
                },
                error: function (result) {
                    alert("Hubo un error", result);
                }
            })


        }
    </script>
}