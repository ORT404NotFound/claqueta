@model IEnumerable<EcommerceProject.Models.Contratacion>

@{
    ViewBag.Title = "Contrataciones realizadas";
}
<div class="row" style="margin-top: 20px">
    <div class="col-md-10">
      
        @if (Model.Count() > 0)
        {
            <div class="well">
                <div class="list-group">
                    @foreach (var c in Model)
                    {
                        <div class="card" style="width: 100%">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">
                                    <span>@c.Estado</span>
                                </h6>
                                <p class="card-text">
                                    @c.Publicacion.Titulo
                                </p>
                                <hr />
                                <div class="float-right">
                                    <button> cancelar</button>
                                   <!--aca poner botones-->
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                </div>
            </div>
        }
        else
        {
            <div class="well">
                <p>No tiene contrataciones realizadas</p>
            </div>
        }
    </div>
</div>
