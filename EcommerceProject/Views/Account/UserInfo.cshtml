@model IEnumerable<EcommerceProject.Models.Publicacion>

@{
    ViewBag.Title = "Mi cuenta";
}
<div class="row" style="margin-top: 20px">
    <div class="col-md-2">
        <ul class="list-group">
            <li class="list-group-item"><a href="@Url.Action("UserInfo","Account")">Publicaciones</a></li>
            <li class="list-group-item"><a href="#">Contrataciones</a></li>
            <li class="list-group-item"><a href="#">Preguntas</a></li>
            <li class="list-group-item"><a href="#">Opiniones</a></li>
            <li class="list-group-item"><a href="@Url.Action("EditUser","Account")">Detalles de cuenta</a></li>
        </ul>
    </div>
    <div class="col-md-10">
        <div>
            <a href="@Url.Action("SavePublication", "Publication")" class="btn btn-outline-primary float-right" aria-pressed="false" autocomplete="off">
                Crear publicación
            </a>
        </div>
        @if (Model.Count() > 0)
        {
            <div class="well">
                <div class="list-group">
                    @foreach (var p in Model)
                    {
                        <div class="card" style="width: 100%">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">
                                    @if (p.Visible)
                                    {
                                        <span>Visible</span>
                                    }
                                    else
                                    {
                                        <span>No Visible</span>
                                    },

                                    <span>@p.Estado</span>
                                    @if (p.Promocionada)
                                    {
                                        <span>,Promocionada</span>
                                    }
                                </h6>
                                <h6>Precio ($) @p.Precio</h6>
                                <h6>Título</h6>
                                <p class="card-text">
                                    @p.Titulo
                                </p>
                                <hr />
                                <div class="float-right">
                                    @if (!p.Promocionada)
                                    {
                                        <a href="@Url.Action("PromocionarPublication", "Publication", new { idPublication = p.Id })" class="btn btn-outline-primary">Promocionar</a>
                                    }
                                    <a href="@Url.Action("EditPublication", "Account", new { publicationId = p.Id })" class="btn btn-primary">Ver detalle</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="well">
                <p>No tiene publicaciones</p>
            </div>
        }
    </div>
</div>
