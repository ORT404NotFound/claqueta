@model IEnumerable<EcommerceProject.Models.Publicacion>

@{
    ViewBag.Title = "Administrador de Publicaciones";
}
<div class="row" style="margin-top: 20px">
    <div class="col-md-10">
        @if (Model.Count() > 0)
        {
            <div class="well">
                <div class="list-group">
                    @foreach (var p in Model)
                    {
                        <div class="card" style="width: 100%">
                            <div class="card-body">
                                <h6 class="card-subtitle mb-2 text-muted">
                                    @if (p.Visible)
                                    {
                                        <span>Visible</span>
                                    }
                                    else
                                    {
                                        <span>No Visible</span>
                                    },
                                    <span>@p.Estado</span>
                                    @if (p.Promocionada)
                                    {
                                        <span>,Promocionada</span>
                                    }
                                </h6>
                                <h6>Precio ($) @p.Precio</h6>
                                <h6>Título</h6>
                                <p class="card-text">
                                    @p.Titulo
                                </p>
                                <hr />
                                <div class="float-right">
                                    <a href="@Url.Action("AprobarPublicacion", "Admin", new { publicacionId = p.Id })" class="btn btn-primary">Aprobar</a>
                                    <a href="@Url.Action("RechazarPublicacion", "Admin", new { publicacionId = p.Id })" class="btn btn-danger">Rechazar</a>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                </div>
            </div>
        }
        else
        {
            <div class="well">
                <p>No tiene publicaciones</p>
            </div>
        }
    </div>
</div>
