@model IEnumerable<EcommerceProject.Models.Publicacion>

@{
    ViewBag.Title = "Claqueta";
}

<div style="margin-top: 10px">
    <h2>@ViewBag.Title</h2>
    <h5>¡Encontra acá todo lo necesario para la realización de tu próxima producción audiovisual!</h5>
    <hr />

    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card" style="margin-top:10px">
                        <center><img src="~/Content/Claqueta.png" class="card-img-top" style="max-width: 50%" /></center>
                        <div class="card-body">
                            <h5 class="card-title">@item.Titulo</h5>
                            <h6 class="card-subtitle">$@item.Precio</h6>
                            <hr />
                            <center><a href="@Url.Action("VerDetalle", "Home", new { id = item.Id })" class="btn btn-outline-primary">Ver Detalle</a></center>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>