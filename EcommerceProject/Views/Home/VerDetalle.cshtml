@section Scripts{
    <script>
        var diasSelec = [];
        $(document).ready(function () {
            var idPubli = @Model.Id;
               $.ajax({
                   data: {
                       publicacionId: idPubli
                },
                type: "get",
                url: "@Url.Action("DameDiasNoDisponiblesPubli","Home")",
                   success: function (arrayDeDias) {
                       var disabledDays = arrayDeDias;
                         $('.picker').datepicker({
                          language: 'es',
                            onRenderCell: function (date, cellType) {
                                if (cellType == 'day') {
                                    var day = date.getDay(),
                                        isDisabled = disabledDays.indexOf(day) != -1;
                                    return {
                                        disabled: isDisabled
                                    }
                                }
                            },
                            minDate: new Date(),
                             onSelect: function onSelect(fd, date) {
                                 diasSelec = [];
                                 date.forEach(function (value) {
                                     diasSelec.push(JSON.stringify(value))
                                })
                            },
                    });
                },
                   error: function (result) {
                    alert("Hubo un error");
                }
            });
        })

        function contratar(userId, publicacionId) {
                if (diasSelec.length == 0) {
                    alert("Debe seleccionar un rango de fechas para contratar este servicio");
                }
                $.ajax({
                    data: {
                        diasSeleccionados: diasSelec,
                        usuarioId: userId,
                        publicacionId: publicacionId
                },
                type: "post",
                url: "/Publication/CrearContratacion",
                    success: function (result) {
                        if (result == "NOTOK") {
                            alert("No se puede contratar a uno mismo");

                        } else {

                        }

                },
                error: function (result) {
                    alert("Hubo un error");
                }
            });
        }
    </script>
}
